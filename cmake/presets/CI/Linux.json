    {
      "name": "ci-linux-dev",
      "inherits": ["linux", "ci", "dev"],
      "displayName": "Linux Dev (CI)",
      "description": "Configuration for Linux CI Dev builds",
      "condition": {
        "type": "allOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Linux"
          },
          {
            "type": "equals",
            "lhs": "$penv{CI}",
            "rhs": "true"
          }
        ]
      }
    },
