{
  "version": 6,
  "configurePresets": [
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "warnings": {
        "dev": false,
        "deprecated": false,
        "uninitialized": false
      },
      "errors": {
        "dev": false,
        "deprecated": false
      }
    },
    {
      "name": "dev",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      },
      "warnings": {
        "dev": false,
        "deprecated": true,
        "uninitialized": true
      },
      "errors": {
        "dev": false,
        "deprecated": true
      }
    },
    {
      "name": "ci",
      "hidden": true,
      "cacheVariables": {
        "RD_TEST_WITH_GDB": "ON"
      },
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "ci-vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$penv{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "hidden": true,
      "configuration": "Release"
    },
    {
      "name": "dev",
      "hidden": true,
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ci",
      "hidden": true,
      "jobs": 4
    }
  ],
  "testPresets": [
    {
      "name": "release",
      "hidden": true,
      "configuration": "Release"
    },
    {
      "name": "dev",
      "hidden": true,
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ci",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      }
    }
  ],
  "packagePresets": [
    {
      "name": "release",
      "hidden": true,
      "configurations": ["Release"]
    },
    {
      "name": "dev",
      "hidden": true,
      "configurations": ["RelWithDebInfo"]
    }
  ]
}
