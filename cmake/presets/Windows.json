{
  "version": 6,
  "include": [
    "Base_configurations.json"
  ],
  "configurePresets": [
    {
      "name": "windows-86",
      "hidden": true,
      "generator": "Visual Studio 16 2019",
      "architecture": "Win32",
      "toolset": "v141_xp",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-64",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-arm64",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": "ARM64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "packagePresets": [
    {
      "name": "windows",
      "hidden": true,
      "generators": ["ZIP"]
    }
  ]
}
