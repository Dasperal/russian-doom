{
  "version": 6,
  "include": [
    "Base_configurations.json"
  ],
  "configurePresets": [
    {
      "name": "linux",
      "hidden": true,
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "/usr"
      }
    },
    {
      "name": "linux-dev",
      "hidden": true,
      "inherits": ["linux", "dev"],
      "displayName": "Linux Dev",
      "description": "Configuration for Linux Dev builds",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "/usr/local"
      }
    },
    {
      "name": "linux-release",
      "inherits": ["linux", "release"],
      "displayName": "Linux Release",
      "description": "Configuration for Linux Release builds",
      "binaryDir": "${sourceDir}/build"
    }
  ],
  "buildPresets": [
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "inherits": "release",
      "displayName": "Linux Release",
      "description": "Cmake build configuration for Linux Release builds",
      "jobs": 16,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "packagePresets": [
    {
      "name": "deb",
      "hidden": true,
      "generators": ["DEB"]
    },
    {
      "name": "rpm",
      "hidden": true,
      "generators": ["RPM"]
    },
    {
      "name": "linux-release-deb",
      "configurePreset": "linux-release",
      "inherits": ["release", "deb"],
      "displayName": "Linux Release (DEB)",
      "description": "Cmake package configuration for Linux Release DEB builds",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release-fedora-rpm",
      "configurePreset": "linux-release",
      "inherits": ["release", "rpm"],
      "displayName": "Linux Release (Fedora RPM)",
      "description": "Cmake package configuration for Linux Release RPM (Fedora) builds",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Workflow for Linux Release builds",
      "steps": [
        {
          "type": "configure",
          "name": "linux-release"
        },
        {
          "type": "build",
          "name": "linux-release"
        }
      ]
    },
    {
      "name": "linux-release-deb",
      "displayName": "Linux Release (DEB)",
      "description": "Workflow for Linux Release DEB builds",
      "steps": [
        {
          "type": "configure",
          "name": "linux-release"
        },
        {
          "type": "build",
          "name": "linux-release"
        },
        {
          "type": "package",
          "name": "linux-release-deb"
        }
      ]
    },
    {
      "name": "linux-release-fedora-rpm",
      "displayName": "Linux Release (Fedora RPM)",
      "description": "Workflow for Linux Release RPM (Fedora) builds",
      "steps": [
        {
          "type": "configure",
          "name": "linux-release"
        },
        {
          "type": "build",
          "name": "linux-release"
        },
        {
          "type": "package",
          "name": "linux-release-fedora-rpm"
        }
      ]
    }
  ]
}
